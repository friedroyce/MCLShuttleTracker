<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/editbg"
    android:clickable="true"
    android:focusable="true"
    tools:context=".FragmentProfile">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:text="Manage your account settings."
        android:textColor="@color/mclblue"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.324"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.188" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="26dp"
        android:fontFamily="@font/bold"
        android:text="Edit Account"
        android:textColor="@color/mclblue"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/txtDriverId2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.256" />

    <EditText
        android:id="@+id/txtDriverId2"
        android:layout_width="171dp"
        android:layout_height="54dp"
        android:layout_marginBottom="10dp"
        android:background="@color/greyedout"
        android:enabled="false"
        android:fontFamily="@font/regular"
        android:hint="Driver Id"
        android:nextFocusForward="@+id/txtFirstName2"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/txtgrey"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/txtFirstName2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/txtFirstName2"
        android:layout_width="171dp"
        android:layout_height="54dp"
        android:layout_marginBottom="8dp"
        android:background="@color/inputboxgrey"
        android:fontFamily="@font/regular"
        android:hint="First Name"
        android:nextFocusForward="@+id/txtLastName2"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/txtgrey"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/txtLastName2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.993" />

    <EditText
        android:id="@+id/txtLastName2"
        android:layout_width="171dp"
        android:layout_height="54dp"
        android:background="@color/inputboxgrey"
        android:fontFamily="@font/regular"
        android:hint="Last Name"
        android:nextFocusForward="@+id/txtPassword2"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/txtgrey"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.524" />

    <EditText
        android:id="@+id/txtPassword2"
        android:layout_width="318dp"
        android:layout_height="54dp"
        android:layout_marginBottom="12dp"
        android:background="@color/inputboxgrey"
        android:fontFamily="@font/regular"
        android:hint="Password"
        android:inputType="textPassword"
        android:nextFocusForward="@+id/txtConfirmPass2"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/txtgrey"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/txtConfirmPass2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/txtConfirmPass2"
        android:layout_width="318dp"
        android:layout_height="54dp"
        android:background="@color/inputboxgrey"
        android:fontFamily="@font/regular"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:nextFocusForward="@+id/btnRegister2"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/txtgrey"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.72" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="140dp"
        android:layout_height="36dp"
        android:layout_marginTop="224dp"
        android:fontFamily="@font/regular"
        android:text="Seat Capacity"
        android:textColor="@color/mclblue"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/numCapacity2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <NumberPicker
        android:id="@+id/numCapacity2"
        android:layout_width="93dp"
        android:layout_height="148dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.376"
        app:layout_constraintStart_toEndOf="@+id/txtLastName2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.432" />

    <Button
        android:id="@+id/btnSave2"
        android:layout_width="306dp"
        android:layout_height="54dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="108dp"
        android:background="@drawable/btnblue"
        android:fontFamily="@font/bold"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>